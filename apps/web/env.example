# AWS DynamoDB (dev/prod)
AWS_REGION=us-east-1
# Set one of the following credential methods:
# 1) IAM user keys (development)
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# 2) IAM role (production) — provided by hosting provider

# DynamoDB tables
DYNAMODB_TABLE_MARKETS=markets
DYNAMODB_TABLE_POSITIONS=positions
DYNAMODB_TABLE_TRADES=trades
DYNAMODB_TABLE_ORDERS=orders

# Optional: if using DynamoDB Local (development only)
# AWS_DYNAMODB_ENDPOINT=http://localhost:8000
# AWS_ACCESS_KEY_ID=local
# AWS_SECRET_ACCESS_KEY=local

# API Base (apps/api) — used by client components
NEXT_PUBLIC_API_BASE_URL=http://localhost:3002
