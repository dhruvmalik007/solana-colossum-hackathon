{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Solana DeFi Protocol Registry",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "updatedAt": { "type": "string" },
    "protocols": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["slug", "name", "category", "programs"],
        "properties": {
          "slug": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "website": { "type": "string" },
          "icons": { "type": "array", "items": { "type": "string" } },
          "programs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["programId"],
              "properties": {
                "programId": { "type": "string" },
                "idlUrl": { "type": "string" },
                "anchor": { "type": "boolean" },
                "accounts": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "pubkey": { "type": "string" },
                      "role": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["version", "updatedAt", "protocols"]
}
